def maximizeHighCards(player,keep):
    for i in range(len(keep)):
        print(rankValue[player.hand.cards[i].rank()])
        if (keep[i] == -1):
            if (rankValue[player.hand.cards[i].rank()] >= 10):
                keep[i] = True
            else:
                keep[i] = False
    print(keep)
    
        
