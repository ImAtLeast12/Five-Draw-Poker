def clearDeck():
    cardLoc = [0]*NUMCARDS

def showDeck():
    p = []
    for i in range(NUMCARDS):
        p.append(printCard(i))

    print(p)
    for i in range(len(p)):
        print(p[i])
    

def printCard(cardIndex):
    y = cardIndex // len(rankName)
    x = cardIndex % len(rankName)
    return ('{} \t {:5} of {} \t').format(cardIndex,rankName[x],suitName[y])





class Player():
    def __init__(self, name = "Nick",isComputer = False,hand = [],playerNum = 1):
        self.name = name
        self.isComputer = isComputer
        self.hand = []
        self.playerNum = playerNum

    def assignCard(self,playerOn):
        #generate a random number from 0 to 51
        #later make sure that it is inside the deck
        randNum = int(random() * 51)
        self.hand.append(randNum)
        
    def showHand(self,playerOn):
        print(self.hand)

    
    
        

Main()

        
